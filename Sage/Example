#define the PTE solution
a1(x)=(x-1)^2*(x-8)^2*(x-15)^2;
b1(x)=x*(x-3)*(x-5)*(x-11)*(x-13)*(x-16);
C1=14400;
roots1=[0,1,3,5,8,11,13,15,16];
res1=findResidues(a1,C1)

#mark all integers in the interval [2^40,2^40+2^20) as 2^16-power-smooth (1) or not-2^16-power-smooth (0)
fac16=smoothPrimes(2^16);
list40=sieve(2^40,2^20,fac16);

#use the naive or the optimised algorithm
checkAll(list40,roots1,a1,C1)
checkRes(list40,res1,C1,roots1)
